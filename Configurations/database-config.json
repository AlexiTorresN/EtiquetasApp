{
  "DatabaseSettings": {
    "Provider": "SqlServer",
    "ConnectionTimeout": 30,
    "CommandTimeout": 60,
    "EnableConnectionPooling": true,
    "MaxPoolSize": 100,
    "MinPoolSize": 5
  },
  "Connections": {
    "EtiquetasDB": {
      "Name": "EtiquetasDB",
      "Description": "Base de datos principal del sistema de etiquetas",
      "Server": "localhost",
      "Database": "EtiquetasDB",
      "IntegratedSecurity": true,
      "UserId": "",
      "Password": "",
      "TrustServerCertificate": true,
      "Tables": [
        "MAESTRO_COD_ETIQ",
        "SOLICITUD_ETIQUETAS",
        "ETIQUETAS_LOG"
      ]
    },
    "ProduccionDB": {
      "Name": "ProduccionDB",
      "Description": "Base de datos de producción (órdenes de trabajo)",
      "Server": "localhost",
      "Database": "ProduccionDB",
      "IntegratedSecurity": true,
      "UserId": "",
      "Password": "",
      "TrustServerCertificate": true,
      "Tables": [
        "WORK_ORDER",
        "OPERATION_SCHED",
        "PART"
      ]
    }
  },
  "TableMapping": {
    "MAESTRO_COD_ETIQ": {
      "Database": "EtiquetasDB",
      "Description": "Maestro de códigos de etiquetas",
      "PrimaryKey": [ "PART_ID", "ID_ETIQUETA" ],
      "Fields": [
        "PART_ID",
        "ID_ETIQUETA",
        "NOMBRE",
        "DESCRIPCION",
        "FACTOR",
        "COLOR",
        "USER_1",
        "SKU",
        "TIPO_CODIGO"
      ]
    },
    "SOLICITUD_ETIQUETAS": {
      "Database": "EtiquetasDB",
      "Description": "Solicitudes de impresión de etiquetas",
      "PrimaryKey": [ "ID_ETIQUETA" ],
      "Fields": [
        "ID_ETIQUETA",
        "PART_ID",
        "ORDEN_FAB",
        "FECHA_SOLICITUD",
        "FECHA_REQUERIDA",
        "CANTIDAD_PEDIDA",
        "COLOR",
        "OBS",
        "TIPO_CODIGO",
        "USUARIO",
        "CANTIDAD_FABRICADA",
        "FECHA_FABRICACION",
        "NOMBRE_RETIRA",
        "FECHA_ENTREGA"
      ]
    },
    "ETIQUETAS_LOG": {
      "Database": "EtiquetasDB",
      "Description": "Log de operaciones sobre etiquetas",
      "PrimaryKey": [ "ID" ],
      "Fields": [
        "DESCRIPCION",
        "ANTES",
        "DESPUES",
        "USUARIO",
        "FECHA"
      ]
    },
    "WORK_ORDER": {
      "Database": "ProduccionDB",
      "Description": "Órdenes de trabajo",
      "PrimaryKey": [ "BASE_ID" ],
      "Fields": [
        "BASE_ID",
        "PART_ID",
        "ORDER_ID",
        "QUANTITY",
        "STATUS"
      ]
    },
    "OPERATION_SCHED": {
      "Database": "ProduccionDB",
      "Description": "Programación de operaciones",
      "PrimaryKey": [ "OPERATION_ID" ],
      "Fields": [
        "OPERATION_ID",
        "WORK_ORDER_ID",
        "SCHEDULED_DATE",
        "STATUS"
      ]
    },
    "PART": {
      "Database": "ProduccionDB",
      "Description": "Maestro de productos/partes",
      "PrimaryKey": [ "ID" ],
      "Fields": [
        "ID",
        "DESCRIPTION",
        "UPC_CODE",
        "STATUS"
      ]
    }
  },
  "ConnectionStrings": {
    "EtiquetasDB": "Data Source=localhost;Initial Catalog=EtiquetasDB;Integrated Security=true;TrustServerCertificate=true;",
    "ProduccionDB": "Data Source=localhost;Initial Catalog=ProduccionDB;Integrated Security=true;TrustServerCertificate=true;"
  },
  "ValidationSettings": {
    "ValidateTableExists": true,
    "ValidateFieldTypes": true,
    "EnableDataValidation": true,
    "LogConnectionErrors": true,
    "RetryConnectionAttempts": 3
  }
}
<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <connectionStrings>
    <!-- Conexión principal - Base de datos de Etiquetas -->
    <add name="DatabaseConnection1"
         connectionString="Data Source=localhost;Initial Catalog=EtiquetasDB;Integrated Security=true;TrustServerCertificate=true;"
         providerName="System.Data.SqlClient" />

    <!-- Conexión secundaria - Base de datos de Producción -->
    <add name="DatabaseConnection2"
         connectionString="Data Source=localhost;Initial Catalog=ProduccionDB;Integrated Security=true;TrustServerCertificate=true;"
         providerName="System.Data.SqlClient" />

    <!-- Conexiones adicionales con nombres específicos -->
    <add name="EtiquetasDB"
         connectionString="Data Source=localhost;Initial Catalog=EtiquetasDB;Integrated Security=true;TrustServerCertificate=true;"
         providerName="System.Data.SqlClient" />

    <add name="ProduccionDB"
         connectionString="Data Source=localhost;Initial Catalog=ProduccionDB;Integrated Security=true;TrustServerCertificate=true;"
         providerName="System.Data.SqlClient" />
  </connectionStrings>

  <appSettings>
    <!-- Configuración General de la Aplicación -->
    <add key="AppName" value="Sistema de Etiquetas Molduras" />
    <add key="Version" value="2.0.0" />
    <add key="Environment" value="Development" />
    <add key="EnableLogging" value="true" />
    <add key="LogLevel" value="Info" />
    <add key="LogPath" value="Logs\" />

    <!-- Configuración de Directorios -->
    <add key="TemplatesPath" value="Templates\" />
    <add key="ZPLTemplatesPath" value="Templates\ZPL\" />
    <add key="ResourcesPath" value="Resources\" />
    <add key="ImagesPath" value="Resources\Images\" />
    <add key="BackupPath" value="Backups\" />
    <add key="ConfigurationsPath" value="Configurations\" />

    <!-- Configuración de Impresoras Zebra -->
    <add key="DefaultPrinter" value="ZEBRA01" />
    <add key="DefaultVelocidad" value="4" />
    <add key="DefaultTemperatura" value="15" />
    <add key="PrinterTimeout" value="30" />
    <add key="EnablePrinterAutoDetection" value="true" />
    <add key="ZebraPrinterPort" value="9100" />
    <add key="MaxPrintRetries" value="3" />
    <add key="PrintRetryDelay" value="2000" />

    <!-- Configuración de Etiquetas -->
    <add key="MaxEtiquetasPorDia" value="10000" />
    <add key="ValidarHoraGeneracion" value="true" />
    <add key="ValidarOrdenRepetida" value="true" />

    <!-- Posiciones de Etiquetas CBCOE -->
    <add key="CBCOE_Posicion1" value="17" />
    <add key="CBCOE_Posicion2" value="185" />
    <add key="CBCOE_Posicion3" value="354" />
    <add key="CBCOE_Posicion4" value="522" />
    <add key="CBCOE_Posicion5" value="689" />

    <!-- Posiciones de Etiquetas DUAL -->
    <add key="DUAL_Posicion1" value="17" />
    <add key="DUAL_Posicion2" value="185" />
    <add key="DUAL_Posicion3" value="354" />
    <add key="DUAL_Posicion4" value="522" />
    <add key="DUAL_Posicion5" value="689" />

    <!-- Posiciones de Etiquetas MOLDURAS -->
    <add key="MOLDURAS_Posicion1" value="20" />
    <add key="MOLDURAS_Posicion2" value="190" />
    <add key="MOLDURAS_Posicion3" value="360" />
    <add key="MOLDURAS_Posicion4" value="530" />
    <add key="MOLDURAS_Posicion5" value="700" />

    <!-- Configuración de Validaciones -->
    <add key="ValidarUPCUnico" value="true" />
    <add key="ValidarDescripcionObligatoria" value="true" />
    <add key="PermitirSolicitudesDuplicadas" value="false" />

    <!-- Configuración de Reportes -->
    <add key="FormatoFechaReportes" value="dd/MM/yyyy" />
    <add key="SeparadorCSV" value=";" />
    <add key="EncodingExportacion" value="UTF-8" />

    <!-- Configuración de Interfaz -->
    <add key="TiempoAutoRefresh" value="30000" />
    <add key="MostrarAyudas" value="true" />
    <add key="HabilitarSonidos" value="false" />
    <add key="TemaInterfaz" value="Default" />

    <!-- Configuración de Seguridad -->
    <add key="PasswordReactivacion" value="h6441c" />
    <add key="HabilitarAuditoria" value="true" />
    <add key="TiempoExpiracionSesion" value="480" />

    <!-- Configuración de Red -->
    <add key="TimeoutConexionRed" value="5000" />
    <add key="ReintentosFallaRed" value="3" />
    <add key="IntervaloReintentos" value="1000" />

    <!-- Configuración de Base de Datos -->
    <add key="TimeoutComandoSQL" value="60" />
    <add key="HabilitarPoolConexiones" value="true" />
    <add key="TamañoPoolMaximo" value="100" />
    <add key="TamañoPoolMinimo" value="5" />

    <!-- Configuración de Desarrollo -->
    <add key="ModoDesarrollo" value="true" />
    <add key="HabilitarDebugSQL" value="false" />
    <add key="GuardarPlantillasTemporales" value="true" />
  </appSettings>

  <system.diagnostics>
    <trace autoflush="true">
      <listeners>
        <add name="FileTraceListener"
             type="System.Diagnostics.TextWriterTraceListener"
             initializeData="Logs\EtiquetasApp.log" />
      </listeners>
    </trace>
  </system.diagnostics>

  <runtime>
    <assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
      <dependentAssembly>
        <assemblyIdentity name="Newtonsoft.Json" publicKeyToken="30ad4fe6b2a6aeed" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-13.0.0.0" newVersion="13.0.3.0" />
      </dependentAssembly>
    </assemblyBinding>
  </runtime>

  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.8" />
  </startup>
</configuration>